<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout android:id="@+id/layItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_shade"
        android:paddingBottom="10dp"
        android:layout_margin="10dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        >
        <ImageView
            android:id="@+id/itemCover"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/news"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="left|center"
            >

            <TextView
                android:id="@+id/itemCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#FF9800"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:paddingBottom="2dp"
                android:text="CAT"
                android:textColor="#424242"
                />
            <TextView android:id="@+id/itemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="মহাকাশে ফাটল ধরবে না রাশিয়া-যুক্তরাষ্ট্র সম্পর্ক. মহাকাশে ফাটল ধরবে না রাশিয়া-যুক্তরাষ্ট্র সম্পর্ক"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/itemDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="মহাকাশে ফাটল ধরবে না রাশিয়া-যুক্তরাষ্ট্র সম্পর্কমহাকাশে ফাটল ধরবে না রাশিয়া-যুক্তরাষ্ট্র সম্পর্কমহাকাশে ফাটল ধরবে না রাশিয়া-যুক্তরাষ্ট্র সম্পর্ক"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="3dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>